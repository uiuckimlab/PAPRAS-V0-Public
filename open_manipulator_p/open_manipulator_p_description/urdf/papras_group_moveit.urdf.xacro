<?xml version="1.0"?>
<robot name="open_manipulator_p" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Import Rviz colors -->
  <xacro:include filename="$(find open_manipulator_p_description)/urdf/materials.xacro"/>

  <!-- Import all Gazebo-customization elements, including Gazebo colors -->
  <xacro:include filename="$(find open_manipulator_p_description)/urdf/open_manipulator_p.gazebo.xacro"/>

  <!-- Import Transmission -->
  <xacro:include filename="$(find open_manipulator_p_description)/urdf/3arm_moveit.transmission.xacro"/>

  <xacro:arg name="base_offset" default ="0.046375"/>

  <xacro:arg name="robot1_base_x" default="-0.3"/>
  <xacro:arg name="robot1_base_y" default="0.1"/>
  <xacro:arg name="robot1_base_z" default="1.1"/>
  <xacro:arg name="robot1_base_yaw" default="1.57"/>

  <xacro:arg name="robot2_base_x" default="-0.3"/>
  <xacro:arg name="robot2_base_y" default="-0.5"/>
  <xacro:arg name="robot2_base_z" default="1.1"/>
  <xacro:arg name="robot2_base_yaw" default="1.57"/>

  <xacro:arg name="robot3_base_x" default="0.3"/>
  <xacro:arg name="robot3_base_y" default="0.0"/>
  <xacro:arg name="robot3_base_z" default="1.1"/>
  <xacro:arg name="robot3_base_yaw" default="-1.57"/>

  <xacro:macro name="omp_arm" params="id">

    <joint name="robot${id}/world_fixed" type="fixed">
        <parent link="world" />
        <child link="robot${id}/link1" />
        <origin xyz="$(eval robot${id}_base_x) $(eval robot${id}_base_y) $(eval robot${id}_base_z-base_offset)"
                rpy="0 0 $(eval robot${id}_base_yaw)"/>
    </joint>

    <!-- link 1 -->
    <link name="robot${id}/link1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://open_manipulator_p_description/meshes/link1.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://open_manipulator_p_description/meshes/link1.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.00023 0.00000 0.06223" rpy="0 0 0"/>
        <mass value="0.85644"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        <!--<inertia ixx="0.00121064" ixy="0.0" ixz="0.00001100" iyy="0.00120886" iyz="0.0" izz="0.00038103" />-->
      </inertial>
    </link>

    <!-- Joint 1 -->
    <joint name="robot${id}/joint1" type="revolute">
      <parent link="robot${id}/link1"/>
      <child link="robot${id}/link2"/>
      <origin xyz="0.0 0.0 0.126" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
      <dynamics damping="0.7"/>
    </joint>

    <!-- link 2 -->
    <link name="robot${id}/link2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://open_manipulator_p_description/meshes/link2.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://open_manipulator_p_description/meshes/link2.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.00000 0.00080 0.03183" rpy="0 0 0"/>
        <!--<origin xyz="0.00000 -0.06820 -0.00117" rpy="0 0 0"/>-->
        <mass value="0.94658"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        <!--<inertia ixx="0.00152547" ixy="0.0" ixz="0.0" iyy="0.00045954" iyz="-0.00001086" izz="0.00151740" />-->
      </inertial>
    </link>

    <!-- Joint 2 -->
    <joint name="robot${id}/joint2" type="revolute">
      <parent link="robot${id}/link2"/>
      <child link="robot${id}/link3"/>
      <origin xyz="0.0 0.069 0.033" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
      <dynamics damping="0.7"/>
    </joint>

    <!-- link 3 -->
    <link name="robot${id}/link3">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://open_manipulator_p_description/meshes/link3.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://open_manipulator_p_description/meshes/link3.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.01768 -0.06881 0.20524" rpy="0 0 0"/>
        <!--<origin xyz="-0.01232 -0.05731 -0.05876" rpy="0 0 0"/>-->
        <mass value="1.30260"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        <!--<inertia ixx="0.01111021" ixy="0.00001331" ixz="-0.00134208" iyy="0.01046642" iyz="0.00016235" izz="0.00202081" />-->
      </inertial>
    </link>

    <!-- Joint 3 -->
    <joint name="robot${id}/joint3" type="revolute">
      <parent link="robot${id}/link3"/>
      <child link="robot${id}/link4"/>
      <origin xyz="0.03000 -0.01150 0.26400" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
      <dynamics damping="0.7"/>
    </joint>

    <!-- link 4 -->
    <link name="robot${id}/link4">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://open_manipulator_p_description/meshes/link4.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://open_manipulator_p_description/meshes/link4.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.12475 -0.05716 0.02979" rpy="0 0 0"/>
        <!--<origin xyz="-0.07025 0.00034 -0.00021" rpy="0 0 0"/>-->
        <mass value="1.15977"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        <!--<inertia ixx="0.00096726" ixy="0.00004383" ixz="-0.00002771" iyy="0.00318801" iyz="0.00000627" izz="0.00341484" />-->
      </inertial>
    </link>

    <!-- Joint 4 -->
    <joint name="robot${id}/joint4" type="revolute">
      <parent link="robot${id}/link4"/>
      <child link="robot${id}/link5"/>
      <origin xyz="0.19500 -0.05750 0.03000" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
      <dynamics damping="0.7"/>
    </joint>

    <!-- link 5 -->
    <link name="robot${id}/link5">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://open_manipulator_p_description/meshes/link5.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://open_manipulator_p_description/meshes/link5.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.05642 -0.00217 0.00002" rpy="0 0 0"/>
        <!--<origin xyz="-0.00658 -0.04717 0.00002" rpy="0 0 0"/>-->
        <mass value="0.44688"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        <!--<inertia ixx="0.00030285" ixy="0.00000761" ixz="0.00000031" iyy="0.00022339" iyz="-0.00000001" izz="0.00039766" />-->
      </inertial>
    </link>

    <!-- Joint 5 -->
    <joint name="robot${id}/joint5" type="revolute">
      <parent link="robot${id}/link5"/>
      <child link="robot${id}/link6"/>
      <origin xyz="0.06300 0.04500 0.00000" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
      <dynamics damping="0.7"/>
    </joint>

    <!-- link 6 -->
    <link name="robot${id}/link6">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://open_manipulator_p_description/meshes/link6.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://open_manipulator_p_description/meshes/link6.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.06831 -0.04457 0.00000" rpy="0 0 0"/>
        <!--<origin xyz="-0.05469 0.00043 0.00000" rpy="0 0 0"/>-->
        <mass value="0.43273"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        <!--<inertia ixx="0.00021512" ixy="0.00001009" ixz="0.00000000" iyy="0.00042827" iyz="0.00000000" izz="0.00051436" />-->
      </inertial>
    </link>

    <!-- Joint 6 -->
    <joint name="robot${id}/joint6" type="revolute">
      <parent link="robot${id}/link6"/>
      <child link="robot${id}/end_link"/>
      <origin xyz="0.12300 -0.04500 0.00000" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit velocity="6.5" effort="1000" lower="${-pi*0.5}" upper="${pi*0.5}" />
      <dynamics damping="0.7"/>
    </joint>

    <!-- end link -->
    <link name="robot${id}/end_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://open_manipulator_p_description/meshes/end_link.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>

      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://open_manipulator_p_description/meshes/end_link.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.00337 0.00000 0.00000" rpy="0 0 0"/>
        <mass value="0.01919"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        <!--<inertia ixx="0.00000938" ixy="0.0" ixz="0.0" iyy="0.00000338" iyz="0.0" izz="0.00000635" />-->
      </inertial>
    </link>
  </xacro:macro>

  <!-- World -->
  <link name="world"/>
  <xacro:omp_arm id="1"/>
  <xacro:omp_arm id="2"/>
  <xacro:omp_arm id="3"/>

</robot>
